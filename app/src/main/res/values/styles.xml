<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#6696C8</item>
        <item name="colorPrimaryDark">#6696C8</item>
        <item name="colorAccent">@color/accent</item>


        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">#000</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#6696C8</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>


        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">#000</item>
        <item name="android:textColorHint">@color/iron</item>


        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Light.Noactionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#6696C8</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/accent</item>


        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">#000</item>
        <item name="android:textColorHint">@color/iron</item>


        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
    </style>

</resources>
